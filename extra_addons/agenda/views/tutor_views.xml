<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tutor_form" model="ir.ui.view">
            <field name="name">tutor.form</field>
            <field name="model">colegio.tutor</field>
            <field name="arch" type="xml">
                <form string="Tutor">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="relationship"/>
                            <!-- <field name="phone"/>
                            <field name="email"/> -->
                            <field name="user_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tutor_tree" model="ir.ui.view">
            <field name="name">tutor.list</field>
            <field name="model">colegio.tutor</field>
            <field name="type">list</field>  <!-- Cambiado de 'tree' a 'list' -->
            <field name="arch" type="xml">
                <list string="Tutor">
                    <field name="name"/>
                    <field name="relationship"/>
                    <!-- <field name="phone"/> -->
                    <!-- <field name="email"/> -->
                </list>
            </field>
        </record>

        <record id="action_tutor" model="ir.actions.act_window">
            <field name="name">Tutores</field>
            <field name="res_model">colegio.tutor</field>
            <field name="view_mode">list,form</field>  <!-- Cambiado de 'tree' a 'list' -->
        </record>

        <!-- <menuitem id="menu_tutor" name="Tutores" parent="menu_colegio" action="action_tutor"/> -->
    </data>
</odoo>