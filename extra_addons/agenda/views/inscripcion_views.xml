<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inscripcion_form" model="ir.ui.view">
        <field name="name">inscripcion.form</field>
        <field name="model">colegio.inscripcion</field>
        <field name="arch" type="xml">
            <form string="Inscripción">
                <sheet>
                    <group>
                        <field name="alumno_id"/>
                        <field name="curso_id"/>
                        <field name="gestion_id"/>
                        <field name="fecha_inscripcion"/>
                        <!-- <field name="estado"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_inscripcion_tree" model="ir.ui.view">
        <field name="name">inscripcion.list</field>
        <field name="model">colegio.inscripcion</field>
        <field name="type">list</field>  <!-- Cambiado de 'tree' a 'list' -->
        <field name="arch" type="xml">
            <list string="Inscripción">
                <field name="alumno_id"/>
                <field name="curso_id"/>
                <field name="fecha_inscripcion"/>
                <!-- <field name="estado"/> -->
            </list>
        </field>
    </record>

    <record id="action_inscripcion" model="ir.actions.act_window">
        <field name="name">Inscripciones</field>
        <field name="res_model">colegio.inscripcion</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem id="menu_inscripcion" name="Inscripciones" parent="menu_colegio" action="action_inscripcion"/> -->
</odoo>
